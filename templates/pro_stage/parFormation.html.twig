{% extends 'base.html.twig' %}

{% block titre %}
    {{ parent() }} : formation {{ name }}
{% endblock %}

{% block nomPage %}
    {{ infoFormation.nom }}
{% endblock %}

{% block titreContenu %}
    Bienvenue sur la page de la formation      {{ name }} <br>
    Voici la liste des stages propos√©s !
{% endblock %}


{% block tableau %}

<thead>
    <tr>
        <th> Titres  </th>
        <th> Entreprises  </th>
        <th> Formations  </th>
        <th> Liens vers l'offre  </th>
    </tr>
</thead>

<tbody>
    {% for stage in infoFormation.stages %}
    <tr> 
        <td> {{ stage.titre }} </td>
        <td> {{ stage.entreprise.nom }} </td>
        <td> 
            {% for formation in stage.formations %}
            -- {{ formation.acronyme }} --     
            {% endfor %}
        </td>
        <td> <a href="{{ path('ProStageController_stages', { 'id': stage.ID}) }}" > Voir l'offre de stage </a> </td>
    </tr>
    {% endfor %}
</tbody>
{% endblock %}

